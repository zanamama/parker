{{#if showParkedCars}}
	<div class="row">
		<div
			class="col-12 text-center"
			data-loc="{{locationData.id}}"
			id="location"
		><h4>{{locationData.address}}</h4></div>
	</div>

	{{! TODO: Newly added - display of map in iframe }}
	<div class="row">
		<div class="col-12">
			<iframe
				width="100%"
				height="200"
				style="border:2"
				loading="lazy"
				allowfullscreen
				src="https://www.google.com/maps/embed/v1/streetview?location={{locationData.latitude}},{{locationData.longitude}}&key=AIzaSyCT_49hQAQYntP2w21iH97aqi5IYUIYlRg"
				class="border-success rounded"
			></iframe>
		</div>
	</div>

	<div class="row my-2">
		<div class="col-12 col-sm-6">
			<a
				href="https://www.google.com/maps/search/?api=1&query={{locationData.latitude}},{{locationData.longitude}}"
				target="_blank"
				class="btn btn-outline-success btn-lg form-control"
			><i class="fas fa-directions"></i> Go Now</a>
		</div>
		<div class="col-12 col-sm-6">
			<button
				type="button"
				id="park-here"
				class="btn btn-success btn-lg form-control"
			>
				Park Here
				<i class="fas fa-car"></i>
			</button>
		</div>
	</div>

	<div class="row">
		<div class="col-12">
			<p id="park-message" class="text-center"></p>
		</div>
	</div>

	<div class="row">
		<div class="col-12">
			{{#if locationData.cars}}
				<ul class="list-group" id="car-list">
					{{#each locationData.cars as |car|}}
						<li class="list-group-item"><i
								class="fas fa-car-side text-danger fa-lg mr-2 clickable"
								data-id="{{car.id}}"
								id="del-btn"
							></i>
							<span class="text-muted mr-2">{{incremented @index}}
								of 5</span>
							<span class="h4">{{car.brand}} {{car.model}}</span>
						</li>
					{{/each}}
				</ul>
			{{else}}
				<div class="my-2 text-danger text-center">
					<h3>Oops! There's no car here!</h3>
				</div>
			{{/if}}
		</div>
	</div>
{{else}}
	<div class="my-5 text-danger text-center">
		<h3>Oops! There's nothing here!</h3>
	</div>
{{/if}}
<script type="text/javascript" src="/assets/js/park.js"></script>