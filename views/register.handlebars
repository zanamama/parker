
<div class="row">
  <div class="col-12 text-center"><h2>Create Account</h2></div>
  <div class="col-12">
    <div class="card col-12">
      <form class="form register-form">
        <div class="form-group mt-3">
          <label for="firstname">First Name:</label>
          <input class="form-control" type="text" id="firstname-register">
        </div>
        <div class="form-group">
          <label for="lastname">Last Name:</label>
          <input class="form-control" type="text" id="lastname-register">
        </div>
        <div class="form-group">
          <label for="email">Email: </label>
          <input class="form-control" type="text" id="email-register"/>
        </div>
        <div class="form-group">
          <label for="password">Password:</label>
          <input class="form-control" type="password" id="password-register"/>
          <p class="mt-3" id="register-message">Must be 8+ Characters in Length</p>
        </div>
        <div class="form-group">
          {{!-- <button class="btn btn-info btn-lg" id="register-btn" type="button">Register</button> --}}
          <input type='submit' class="btn btn-info btn-lg" value='Register'>
          <a href="/login" class="btn btn-outline-secondary btn-lg" >Login</a>
        </div>
      </form>
    </div>
  </div>
</div>
